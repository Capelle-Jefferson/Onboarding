{% extends 'base.html.twig' %}

{% form_theme formContact 'bootstrap_4_layout.html.twig' %}

{% block title %}Page de contact{% endblock %}

{% block body %}
    {% if validate is defined %}
        <p class="validate">Le mail à bien été envoyé </p>
    {% endif %}
    
    <h1>Fiche de contact</h1>
    
    <div class="form">
        {{form_start(formContact)}}
        {{form_widget(formContact)}}
        <button type="submit" class="btn btn-primary">Envoyer</button>
        {{form_end(formContact)}}
    </div>
{% endblock %}
